{
    "name": "litgroup/sms",
    "description": "Short messaging library.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "LitGroup Team",
            "email": "developers@litgroup.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "LitGroup\\Sms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\LitGroup\\Sms\\": "tests/"
        }
    },
    "require": {
        "php": "~5.5|~7.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8@stable"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/phpunit.xml.dist",
            "/.travis.yml",
            ".gitignore"
        ]
    }
}
